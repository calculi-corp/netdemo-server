	"pipeline": {
		"segments": [
			{
				"name": "Build",
				"segment_type": "build",
				"job_steps": [
					{
						"name": "Restore",
						"definition": "Restore with nuget",
						"command": "nuget restore",
						"properties": null
					},
					{
						"name": "Build",
						"definition": "Build debug files",
						"command": "msbuild /t:Rebuild /p:Configuration=Debug",
						"properties": null
					},
					{
						"name": "Test",
						"definition": "Run Tests",
						"command": ".\\test.ps1",
						"properties": null
					},
					{
						"name": "Make Cobertura Report",
						"definition": "convert report to cobertura format",
						"command": ".\\makereport.ps1",
						"properties": null
					},
					{
						"name": "Package",
						"definition": "Pacakge as zip file",
						"command": ".\\package.ps1",
						"properties": null
					}
				],
				"exit_actions": {
					"default": {
						"fetch_logs": true,
						"notifications": [
							{
								"type": "slack",
								"send_notification": true,
								"to": [
									"#gr-pipeline"
								],
								"message": "Segment Status"
							}
						],
						"code_analysis": {
							"publish": true,
							"properties": null
						},
						"delete_instances": true
					},
					"on_success": {
						"notifications": [
							{
								"type": "slack",
								"send_notification": true,
								"to": null,
								"message": "Test message"
							}
						],
						"code_analysis": null
					},
					"on_failure": {
						"notifications": [
							{
								"type": "slack",
								"send_notification": true,
								"to": null,
								"message": "Segment Failure"
							}
						],
						"code_analysis": null
					},
					"on_abort": {
						"notifications": [
							{
								"type": "slack",
								"send_notification": true,
								"to": null,
								"message": "Segment Aborted"
							}
						],
						"code_analysis": null
					}
				},
				"deployment_strategy": {
					"canary_watch_time": "",
					"update_watch_time": "",
					"serial": false
				},
				"application_init": {
					"command": "",
					"arguments": null
				},
