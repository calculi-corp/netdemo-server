					{
						"name": "((application.name))",
						"dependencies": [],
						"downloads": [],
						"files": [
							"((application.name)).zip"
						],
						"package_install_command": "",
						"installed_path": ""
					}
				],
				"instance_tags": [
					{
						"name": "application.name",
						"value": "((application.name))"
					}
				],
				"post_deployment_actions": {
					"instances": null,
					"loadbalanced": false,
					"loadbalancer": {
						"TargetGroupName": "",
						"TargetGroupPort": 0,
						"TargetGroupProtocol": "",
						"TargetType": "",
						"VPCID": "",
						"HealthCheckEnabled": false,
						"HealthCheckPort": "",
						"UnhealthyThresholdCount": 0
					}
				},
				"cache_info": {}
			},
			{
				"name": "Integration",
				"segment_type": "integration",
				"persistent": true,
				"run_after": [
					"Build"
				],
				"job_steps": [
					{
						"name": "Add Firewall Rule",
						"definition": "Add Firewall Rule",
						"command": "Import-Module NetSecurity\nNew-NetFirewallRule -Name port8080 -DisplayName \"port 8080\" -Direction Inbound -Protocol TCP -LocalPort 8080 -Action Allow",
						"properties": null
					},
					{
						"name": "Integration Tests",
						"definition": "Integration Tests",
						"command": ".\\ci\\integration-test.ps1",
						"properties": null
					},
					{
						"name": "jmeter",
						"definition": "jmeter",
						"command": "$ipa = (Get-NetIPConfiguration | Where-Object {$_.IPv4DefaultGateway -ne $null -and $_.NetAdapter.Status -ne \"Disconnected\"}).IPv4Address.IPAddress\n$env:Path += \";$env:PKG_BASE_DIR/jdk/openjdk/bin;$env:PKG_BASE_DIR/jmeter/bin\"\njmeter -Jip=\"$ipa\" -n -t ci/pt.jmx -l $env:TEST_LOGS_DIR/results.jtl",
						"properties": null
					}
				],
				"exit_actions": {
					"default": {
						"fetch_logs": true,
						"notifications": [
							{
								"type": "slack",
								"send_notification": true,
								"to": [
									"#gr-pipeline"
								],
								"message": "Segment Status"
							}
						],
						"code_analysis": {
							"publish": false,
							"properties": null
						},
						"delete_instances": true
					},
					"on_success": {
						"notifications": [
							{
								"type": "slack",
								"send_notification": true,
								"to": null,
								"message": "Test message"
							}
						],
						"code_analysis": {
							"publish": false,
							"properties": null
						}
					},
					"on_failure": {
						"notifications": [
							{
								"type": "slack",
								"send_notification": true,
								"to": null,
								"message": "Segment Failure"
							}
						],
						"code_analysis": {
							"publish": false,
							"properties": null
